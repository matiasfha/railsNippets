<!DOCTYPE>
<html>
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title>VisionLabs Snippets</title>
  <%= stylesheet_link_tag "web_app_theme", "web_app_theme_override", "themes/default/style", :cache => true %>
  <%= stylesheet_link_tag 'highlight' %>
  <%= formtastic_stylesheet_link_tag %>
  <%= javascript_include_tag :defaults %>

</head>
<body>
  <div id="container">
    <div id="header">
      <h1><a href="/">VisionLabs Snippets</a></h1>
      <div id="user-navigation">
        <ul class="wat-cf">
		<% if user_signed_in? %>
			<li>Logeado como <%= current_user.username %> | <%= link_to "Salir", destroy_user_session_path %>
			</li>
		<% else %>
			<li><%= link_to "Ingresar", new_user_session_path %> o </li>
			<li><%= link_to "Registrar", new_user_registration_path %></li>
		<% end %>

        </ul>
      </div>      
      <div id="main-navigation">
        <ul class="wat-cf"></ul>
      </div>
    </div>    
    <div id="wrapper" class="wat-cf">
      <div class="flash">
        <% flash.each do |type, message| -%>
          <div class="message <%= type %>">
            <p><%= message %></p>
          </div>
        <% end -%>
      </div>
      <div id="main">
		
		<h2>Sign up</h2>

		<% form_for resource_name, resource, :url => registration_path(resource_name) do |f| -%>
		  <%= f.error_messages %>
		  <p><%= f.label :username %></p>
		  <p><%= f.text_field :username %></p>

		  <p><%= f.label :email %></p>
		  <p><%= f.text_field :email %></p>

		  <p><%= f.label :password %></p>
		  <p><%= f.password_field :password %></p>

		  <p><%= f.label :password_confirmation %></p>
		  <p><%= f.password_field :password_confirmation %></p>

		  <p><%= f.submit "Sign up" %></p>
		<% end -%>

		<%= render :partial => "shared/devise_links" %>
        <div id="footer">
			<br />
			<br />
			<br />
			<br />
			<br />
			<br />
			<br />
			<br />
          <div class="block">
            <p>Copyright &copy; <%= Time.now.year %> VisionLabs.</p>
			<p>Creado por <%= h("Matías Hernández Arellano") %> | <%= link_to "mhernandez@visionlabs.cl", "mailto:mhernandez@visionlabs.cl"%>
          </div>      
        </div>
      </div>
      <div id="sidebar">
        <%= yield :sidebar %>
      </div>
    </div>    
  </div>
</body>
</html>

